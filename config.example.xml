<?xml version="1.0"?>
<!-- DBVC Config file - https://github.com/jibriss/dbvc -->
<dbvc xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/jibriss/dbvc/master/config.xsd">

    <!-- http://docs.doctrine-project.org/projects/doctrine-dbal/en/latest/reference/configuration.html -->
    <db>
        <driver></driver>
        <host></host>
        <dbname></dbname>
        <user></user>
        <password></password>
        <!-- or <url></url> -->
     </db>

    <!-- Directory where SQL patch files are stored -->
    <patches_directory></patches_directory>

    <!-- Directory where SQL tag files are stored -->
    <tags_directory></tags_directory>

    <!-- Name of the DB table to use to store versions -->
    <dbvc_table>migration_versions</dbvc_table>

</dbvc>
